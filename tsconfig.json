{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "es6",
        "outDir": "./dist",
        "baseUrl": "./lib",
        "allowJs": true,
        "strictNullChecks": true,
        "noImplicitAny": false,
        "types": ["node"],
        "skipLibCheck": true
    },
    "include": [
        "./lib/**/*.ts",
        "./test/**/*.ts",
        "**/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
